<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name ="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss} [%t] %-5level %c - %msg %n" />
        </Console>

        <File name="File" fileName="Reservation.log">
            <PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss} [%t] %-5level %c - %msg %n" />
        </File>
    </Appenders>
    <Loggers level="info">
        <AppenderRef ref="Console" />
        <AppenderRef ref="File" />
    </Loggers>
</Configuration>
